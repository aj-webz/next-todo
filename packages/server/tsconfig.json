{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@repo/db": ["../packages/db/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
